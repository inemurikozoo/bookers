<!--レコードの一覧-->
<h1>Books</h1>

<% @books.each do |book| %>

<p id="notice"></p>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th colspan="3"></th> <!-- colspan・・・セルの結合 -->
            </tr>
        </thead>
        <tbody>
            <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", destroy_book_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %></td>
            </tr>
        </tbody>
    </table>
<% end %>

<!--新規投稿-->
<h2>New Books</h2>
<%= form_with model: @book do |f| %>

    <label>Title</label>
    <%=f.text_field :title %>
    
    <label>Body</label>
    <%=f.text_area :body %>
    
    <%=f.submit 'Create Book' %>
<% end %>
